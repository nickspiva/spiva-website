	author = {Immergluck, Daniel},
	year = {2022},
	keywords = {20th century, 21st century, Discrimination in housing, Georgia Atlanta, History, Housing policy},
	annote = {Introduction -- Building the racially segregated southern capital -- The beltline as a public-private gentrification project -- Planning, subsidy, and housing precarity in the gentrifying city -- Subprimed Atlanta : boom, bust, and uneven recovery -- Diversity and exclusion in the suburbs -- Conclusion},
